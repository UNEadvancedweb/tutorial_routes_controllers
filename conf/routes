# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /upper                      controllers.Application.upper(input)
GET     /form                       controllers.CaptchaController.simpleForm(query ?= null)

# Add routes for the beagles here...
GET     /captcha                    controllers.CaptchaController.showPictures()
POST    /captcha                    controllers.CaptchaController.matches()
GET     /json                       controllers.CaptchaController.allPicturesAsJson()
GET     /redirectTest               controllers.CaptchaController.redirectTest()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)